{
  "name": "browser-gpt",
  "version": "0.1.0",
  "private": true,
  "watch": {
    "build_win": {
      "patterns": [
        "src",
        ".",
        "styles/**",
        "pages/**",
        "public/**"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next"
      ],
      "extensions": [
        "js",
        "json",
        "lock",
        "tsx",
        "ts"
      ]
    },
    "build_mac": {
      "patterns": [
        "src",
        ".",
        "styles/**",
        "pages/**",
        "public/**"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next"
      ],
      "extensions": [
        "js",
        "json",
        "lock",
        "tsx",
        "ts"
      ]
    }
  },
  "scripts": {
    "dev": "next dev",
    "build_win": "next build && next export && npm run prepare:win",
    "build_mac": "next build && next export && npm run prepare:mac",
    "prepare:win": "mv ./out/_next out/assets && sed -i 's/\\/_next/\\/assets/g' ./out/**.html",
    "prepare:mac": "mv ./out/_next out/assets && sed -i '' 's/\\/_next/\\/assets/g' ./out/*.html",
    "watch:mac": "npm-watch build_mac",
    "watch:win": "npm-watch build_win",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook --coverage",
    "test": "storybook.test.js"
  },
  "pre-commit": [
    "test-storybook",
    "test"
  ],
  "dependencies": {
    "@types/styled-components": "^5.1.26",
    "autoprefixer": "10.4.14",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.7",
    "fast-deep-equal": "^3.1.3",
    "langchain": "^0.0.102",
    "next": "13.4.7",
    "npm-watch": "^0.11.0",
    "postcss": "8.4.24",
    "pre-commit": "^1.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7",
    "styled-components": "^6.0.2",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.27",
    "@storybook/addon-coverage": "^0.0.8",
    "@storybook/addon-essentials": "7.0.27",
    "@storybook/addon-interactions": "^7.0.27",
    "@storybook/addon-links": "7.0.27",
    "@storybook/addon-storyshots": "^7.0.27",
    "@storybook/blocks": "7.0.27",
    "@storybook/jest": "^0.1.0",
    "@storybook/nextjs": "7.0.27",
    "@storybook/react": "7.0.27",
    "@storybook/test-runner": "^0.11.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/chrome": "^0.0.241",
    "axe-playwright": "^1.2.3",
    "eslint-plugin-storybook": "^0.6.12",
    "storybook": "7.0.27",
    "typescript": "5.1.6"
  }
}
